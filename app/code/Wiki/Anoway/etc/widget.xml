<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:widget:FormContainer/etc/widget.xsd">
    <widget id="custom_category_widget" class="Wiki\Anoway\Block\Widget\CustomCategoryWidget" is_email_compatible="false">
        <label translate="true">Custom Category Widget</label>
        <description translate="true">Custom widget with category select option.</description>
        <parameters>
            <parameter name="rh_image" xsi:type="block" visible="true" required="false">
                <label translate="true">Anoway Image Uploader</label>
                <block class="Wiki\Anoway\Block\Adminhtml\Category\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
           <parameter name="category_chooser" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Select Categories</label>
                <block class="Wiki\Anoway\Block\Adminhtml\Category\Widget\Chooser" />
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label>Template</label>
                <options>
                    <option name="grid" value="category/widget/grid.phtml" selected="true">
                        <label translate="true">Category Grid Template</label>
                    </option>
                    <option name="sidebar" value="category/widget/sidebar.phtml">
                        <label translate="true">Category Sidebar Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
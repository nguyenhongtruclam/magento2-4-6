<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="categories_images"
            class="Mage\Cate\Block\Categories"
            is_email_compatible="true">
        <label translate="true">Mage Category image</label>
        <description translate="true">This will display the subcategories and images from the parent category</description>
        <parameters>
            <parameter name="id_path" xsi:type="multiselect" visible="true" source_model="Mage\Cate\Model\Config\Source\SelectCategory" required="true" sort_order="10">
                <label translate="true">Category</label>
            </parameter>
            <parameter name="anchor_text" xsi:type="text" visible="true">
                <label translate="true">Anchor Custom Text</label>
            </parameter>
            <parameter name="limit" xsi:type="text" visible="true">
                <label translate="true">Limit</label>
                <description translate="true">This will display maximum item(default:12 item)</description>
            </parameter>
        </parameters>
    </widget>
</widgets>

